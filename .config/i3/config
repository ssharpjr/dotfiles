bindsym $mod+e exec --no-startup-id $email
bindsym $mod+t exec --no-startup-id remmina -c ~/.remmina/TPI_RDS_ACCT.remmina
bindsym $mod+Shift+o exec --no-startup-id remmina -c ~/.remmina/TPI-DBSVR01.remmina
bindsym $mod+Shift+d exec --no-startup-id remmina -c ~/.remmina/TPI-DC01.remmina
bindsym $mod+Shift+e exec --no-startup-id remmina -c ~/.remmina/TPI-EX2008R2.remmina
bindsym $mod+Shift+m exec --no-startup-id remmina -c ~/.remmina/TPI-ORAMAINT.remmina
bindsym $modShift+t exec --no-startup-id $rdp
# bindsym $mod+m exec --no-startup-id $musicplayer
bindsym $mod+s exec --no-startup-id gnome-screenshot -ai

