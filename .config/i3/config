# vim:filetype=i3config
#
# i3 config file (v4)
#
# i3-gaps
# hide_edge_borders both
for_window [class="^.*"] border pixel 1
gaps inner 5
gaps outer 5
mouse_warping none

# Set Mod key (Windows Key)
set $mod Mod4

# Set app defaults
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager
set $term urxvt
set $filebrowser thunar
set $calculator gnome-calculator
set $browser google-chrome-stable
set $email GTK_THEME=Nordic-Polar evolution
set $rdp remmina
set $musicplayer clementine
set $ide pycharm

# Set font
font pango:Ubuntu Mono Nerd Font 8


# Refresh Network Manager
#_#MOD+<F9>,Refresh Network
bindsym $mod+<F9> $netrefresh

# Move focused window (container) between monitors (outputs)
bindsym $mod+Ctrl+greater move workspace to output right
bindsym $mod+Ctrl+less move workspace to output left

# Set display mode
set $displayMode "Set display mode [w]ork [l]aptop"

#_#MOD+x,Display Mode
bindsym $mod+x mode $displayMode

mode $displayMode {
	bindsym w exec --no-startup-id ~/.config/i3/scripts/i3-work-displays.sh; mode "default"
	bindsym l exec --no-startup-id ~/.config/i3/scripts/i3-laptop-display.sh; mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+x mode "default"
}

# System Mode
set $systemMode "[R]eboot, [S]hutdown, or [E]xit I3?"

#_#MOD+Alt+q,Shutdown System
bindsym $mod+Mod1+q mode $systemMode

mode $systemMode {
	bindsym s exec --no-startup-id sudo shutdown -h now
	bindsym r exec --no-startup-id sudo reboot
	bindsym e exec --no-startup-id i3-msg exit
	bindsym Escape mode "default"
}

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
#_#MOD+Return,Open Terminal
#_#MOD+Shift+Return,Open Terminal in current directory
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec urxvt
bindsym $mod+Shift+Return exec urxvt -cd "$(xcwd)"

# kill focused window
#_#MOD+q,Kill Focused Window
#_#MOD+Shift+q,Kill Focused Window
bindsym $mod+q			[con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $mod+Shift+q		[con_id="__focused__" instance="^(?!dropdown_).*$"] kill

# Lock screen (Mod1=Alt)
#_#Control+Alt+l,Lock Screen
bindsym Control+Mod1+l exec --no-startup-id i3lock -e -t -i /home/ssharp/.wall.png

# start dmenu (a program launcher)
#_#MOD+d,DMenu
bindsym $mod+d exec dmenu_run -i

# change focus
#_#MOD+h,Focus Left
#_#MOD+j,Focus Down
#_#MOD+k,Focus Up
#_#MOD+l,Focus Right
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
#_#MOD+Left,Focus Left
#_#MOD+Down,Focus Down
#_#MOD+Up,Focus Up
#_#MOD+Right,Focus Right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
#_#MOD+Shift+h,Move Focused Window Left
#_#MOD+Shift+j,Move Focused Window Down
#_#MOD+Shift+k,Move Focused Window Up
#_#MOD+Shift+l,Move Focused Window Right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
#_#MOD+Shift+Left,Move Focused Window Left
#_#MOD+Shift+Down,Move Focused Window Down
#_#MOD+Shift+Up,Move Focused Window Up
#_#MOD+Shift+Right,Move Focused Window Right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
# bindsym $mod+Shift+v split h

# split in vertical orientation
#_#MOD+v,Toggle Split
bindsym $mod+v split toggle

# enter fullscreen mode for the focused container
#_#MOD+f,Toggle Fullscreen
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
# bindsym $mod+e layout toggle split
bindsym $mod+Shift+x layout toggle

# toggle tiling / floating
#_#MOD+Shift+Space,Toggle Floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
#_#MOD+Space,Toggle Focus Between Tiling and Floating
bindsym $mod+space focus mode_toggle

# focus the parent container
#_#MOD+a,Focus Parent Container
bindsym $mod+a focus parent

# focus the child container
#_#MOD+Shift+a,Focus Child Container
bindsym $mod+Shift+a focus child

# Scratchpad
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 850 450
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5
exec --no-startup-id urxvt -name dropdown -bg [90]black -fg white -fn "xft:Ubuntu Mono Nerd Font:size=13" +sb -e tmux &
#_#MOD+u,Show Scratchpad
bindsym $mod+u [instance="dropdown"] scratchpad show; [instance="dropdown"] move position center

# Resize gaps
#_#MOD+z,Increase Gap Size
#_#MOD+Shift+z,Decrease Gap Size
bindsym $mod+z gaps outer current plus 5
bindsym $mod+Shift+z gaps outer current minus 5

# Media Hot Keys
# Increase volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% && volnoti-show $(pactl list sinks | grep Volume: | head -1 | cut -d ' ' -f 5-6) 
# Decrease volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% && volnoti-show $(pactl list sinks | grep Volume: | head -1 | cut -d ' ' -f 5-6) 

# Mute volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle && volnoti-show -m
# Screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10 && volnoti-show -s /usr/share/pixmaps/volnoti/display-brightness-symbolic.svg $(xbacklight -get | cut -d '.' -f 1)
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10 && volnoti-show -s /usr/share/pixmaps/volnoti/display-brightness-symbolic.svg $(xbacklight -get | cut -d '.' -f 1)

# Media player controls
bindsym XF86AudioPlay exec mpc play
bindsym XF86AudioPause exec mpc pause
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev

bindsym $mod+p exec --no-startup-id mpc toggle
bindsym $mod+shift+p exec --no-startup-id mpc stop
bindsym $mod+greater exec --no-startup-id mpc next
bindsym $mod+less exec --no-startup-id mpc prev
bindsym $mod+Shift+v exec --nostartup-id $HOME/bin/volctrl.sh

